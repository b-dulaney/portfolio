---
import Card from "../card/Card.astro";
import HeadingTriangle from "../HeadingTriangle.astro";
import Accenture from "../icons/accenture.astro";
import Ameren from "../icons/ameren.astro";
import Nzero from "../icons/nzero.astro";
---

<section id="experience" class="w-full max-w-7xl p-4">
  <div class="flex w-full justify-start items-start">
    <HeadingTriangle className="w-8 h-6" />
    <h2 class="text-3xl font-semibold text-cream font-mono">Experience</h2>
  </div>
  <div class="flex justify-center w-full py-4">
    <Card>
      <div class="flex flex-col gap-2 items-start">
        <div class="flex justify-start items-center gap-4">
          <Nzero />
          <div class="flex flex-col items-start">
            <h3 class="text-lg">Senior Frontend Engineer</h3>
            <p class="text-stone-300">nZero</p>
          </div>
        </div>
        <p>Short paragraph about the company, duties, etc.</p>
      </div>
      <div class="flex flex-col gap-2 items-start">
        <div class="flex justify-start items-center gap-4">
          <Accenture />
          <div class="flex flex-col items-start">
            <h3 class="text-lg">Tech Lead</h3>
            <p>Accenture</p>
          </div>
        </div>
        <p>Short paragraph about the company, duties, etc.</p>
      </div>
      <div class="flex flex-col gap-2 items-start">
        <div class="flex justify-start items-center gap-4">
          <Accenture />
          <div class="flex flex-col items-start">
            <h3 class="text-lg">Frontend Developer</h3>
            <p>Accenture</p>
          </div>
        </div>
        <p>Short paragraph about the company, duties, etc.</p>
      </div>
      <div class="flex flex-col gap-2 items-start">
        <div class="flex justify-start items-center gap-4">
          <Ameren />
          <div class="flex flex-col items-start">
            <h3 class="text-lg">Software Engineer</h3>
            <p>Ameren</p>
          </div>
        </div>
        <p>Short paragraph about the company, duties, etc.</p>
      </div>
    </Card>
  </div>
</section>
