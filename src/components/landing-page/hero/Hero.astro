---
import GithubButton from "../../GithubButton.astro";
import HeroShape from "../hero/HeroShape.svelte";
import LinkedInButton from "../../LinkedInButton.astro";
---

<HeroShape client:only="svelte" />
<div
  class="relative flex justify-start 2xl:justify-center items-end w-full min-h-[400px] md:min-h-[500px] lg:min-w-[600px] lg:min-h-[600px] -z-10"
>
  <div class="flex w-full max-w-7xl flex-col gap-2 md:gap-4 p-4">
    <h1
      class="text-2xl md:text-3xl lg:text-5xl whitespace-nowrap text-cream font-mono tracking-tight"
    >
      Brendan Dulaney
    </h1>
    <h2
      class="text-lg md:text-xl lg:text-2xl text-lime-300 font-mono tracking-tight"
    >
      Full-Stack Engineer
    </h2>
    <p
      class="font-mono md:text-lg lg:text-xl text-cream max-w-xs sm:max-w-sm md:max-w-md"
    >
      I'm a software engineer with 5+ years of experience, based out of <span
        class="text-lime-300">Denver, CO</span
      >.
    </p>
    <div class="flex gap-4">
      <GithubButton />
      <LinkedInButton />
    </div>
  </div>
</div>

<style></style>
